<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/recycler_view_margin"
        android:layout_marginBottom="1.5dp"
        android:layout_marginLeft="@dimen/recycler_view_margin"
        android:layout_marginRight="@dimen/recycler_view_margin"
        app:cardElevation="4dp"
        app:strokeColor="#000"
        app:strokeWidth="0.2dp"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_elevation"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/workerHeadProfileImageInItemDesign"
                android:src="@drawable/avatar"
                android:layout_marginLeft="@dimen/recycler_view_margin"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workerHeadNameInItemDesign"
                android:text="@string/worker_name"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/workerHeadProfileImageInItemDesign"
                android:layout_marginLeft="@dimen/recycler_view_margin"
                android:layout_marginTop="@dimen/recycler_view_margin"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fieldOfWorkerHead"
                android:text="Sanition"
                android:textColor="@color/sign_in_txt_color"
                android:layout_below="@+id/workerHeadNameInItemDesign"
                android:layout_toRightOf="@id/workerHeadProfileImageInItemDesign"
                android:layout_marginLeft="@dimen/recycler_view_margin"
                android:gravity="center"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/moreIconButtonInWorkerHead"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:background="@null"
                android:layout_marginTop="@dimen/recycler_view_margin"
                android:layout_marginRight="@dimen/recycler_view_margin"

                />


        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>